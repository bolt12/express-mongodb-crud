extends layout
block content
  .container
    .row
      // FORM
      .col-md-5
        .card
          .card-body
            form(action='/add' method='post')
              .form-group
                input.form-control(type='text' name='title' placeholder='Title')
              .form-group
                textarea.form-control(name='description' cols='80' placeholder='Add a Description')
              button.btn.btn-primary(type='submit')
                | Add
      // LIST
      .col-md-7
        table.table.table-bordered.table-hover
          thead
            tr
              th N&deg;
              th Title
              th Description
              th Operations
          tbody
            for task,i in tasks
              tr
                td=i+1
                td
                  strong=task.title
                td=task.description
                td
                  a(class=task.status ? 'btn btn-success' : 'btn btn-dark' href='/turn/'+ task._id) Done
                  a.btn.btn-danger(href='/delete/' + task._id)
                    | Delete
                  a.btn.btn-info(href='/edit/'+task._id)
                    | Edit
